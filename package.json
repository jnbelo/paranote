{
    "name": "paranote",
    "version": "0.1.0",
    "author": {
        "name": "JosÃ© Belo",
        "url": "https://github.com/jnbelo"
    },
    "repository": "git@github.com:jnbelo/paranote.git",
    "private": false,
    "main": "./main/main.js",
    "homepage": "./",
    "dependencies": {
        "@journeyapps/sqlcipher": "^5.0.0",
        "ace-builds": "^1.4.12",
        "electron-is-dev": "^1.1.0",
        "electron-log": "^4.3.1",
        "moment": "^2.29.4",
        "prop-types": "^15.7.2",
        "react": "^17.0.1",
        "react-ace": "^9.3.0",
        "react-dom": "^17.0.1",
        "react-feather": "^2.0.9",
        "react-markdown": "^5.0.3",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.2",
        "sql-template-strings": "^2.2.2",
        "sqlite": "^4.0.19",
        "styled-components": "^5.2.1",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test --env=jest-environment-jsdom-sixteen",
        "coverage": "yarn test --coverage",
        "eject": "react-scripts eject",
        "lint": "concurrently \"eslint src/\" \"eslint main/\"",
        "lint:fix": "concurrently \"eslint --fix src/\" \"eslint --fix main/\"",
        "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
        "package": "yarn build && electron-builder --publish never",
        "release": "yarn build && electron-builder --publish always"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true
        },
        "extends": [
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "prettier"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 100
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/react-hooks": "^5.0.3",
        "@testing-library/user-event": "^12.6.3",
        "aws-sdk": "^2.840.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "electron": "^11.2.3",
        "electron-builder": "^22.9.1",
        "electron-reload": "^1.5.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "node-pre-gyp": "^0.17.0",
        "prettier": "^2.2.1",
        "react-app-rewired": "^2.1.8",
        "react-test-renderer": "^17.0.1",
        "wait-on": "^5.2.1"
    },
    "build": {
        "appId": "pt.starbreather.paranote",
        "files": [
            "./build/**/*",
            "./node_modules/**/*",
            "./main/main.js"
        ],
        "publish": {
            "provider": "github"
        },
        "extends": null,
        "mac": {
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Office"
        }
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./jest-preload.js"
        ]
    }
}
