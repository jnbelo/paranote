{
    "name": "paranote",
    "version": "0.1.0",
    "private": true,
    "repository": "git@github.com:jnbelo/paranote.git",
    "author": {
        "name": "Jos√© Belo",
        "url": "https://github.com/jnbelo"
    },
    "workspaces": [
        "common",
        "app",
        "electron"
    ],
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start:web": "yarn workspace @paranote/app start",
        "start:electron": "yarn workspace @paranote/electron start",
        "start:dev": "concurrently \"cross-env BROWSER=none yarn workspace @paranote/app start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development yarn workspace @paranote/electron start\"",
        "lint": "cross-env yarn workspace @paranote/electron lint && yarn workspace @paranote/app lint && yarn workspace @paranote/common lint",
        "lint:fix": "cross-env yarn workspace @paranote/electron lint:fix && yarn workspace @paranote/app lint:fix && yarn workspace @paranote/common lint:fix",
        "package": "yarn build && electron-builder --publish never",
        "release": "yarn build && electron-builder --publish always"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.6",
        "@testing-library/user-event": "^13.1.5",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.168",
        "@types/react": "^17.0.4",
        "@types/react-dom": "^17.0.3",
        "@types/react-redux": "^7.1.16",
        "@types/react-router": "^5.1.13",
        "@types/react-router-dom": "^5.1.7",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "concurrently": "^6.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "^2.2.1",
        "wait-on": "^5.3.0"
    }
}
