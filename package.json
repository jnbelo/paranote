{
    "name": "paranote",
    "version": "0.1.0",
    "private": true,
    "repository": "git@github.com:jnbelo/paranote.git",
    "author": {
        "name": "Jos√© Belo",
        "url": "https://github.com/jnbelo"
    },
    "workspaces": [
        "common",
        "app",
        "electron"
    ],
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start:web": "yarn workspace app start",
        "start:electron": "yarn workspace electron start",
        "start:dev": "concurrently \"cross-env BROWSER=none yarn workspace app start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development yarn workspace electron start\"",
        "lint": "eslint ./app/src/ ./electron/src/",
        "lint:fix": "eslint --fix ./app/src/ ./electron/src/",
        "package": "yarn build && electron-builder --publish never",
        "release": "yarn build && electron-builder --publish always"
    },
    "devDependencies": {
        "concurrently": "^6.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-prettier": "^3.3.1",
        "wait-on": "^5.2.1"
    }
}
